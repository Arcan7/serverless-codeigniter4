{
    "version": 2,
    "builds": [
        { "src": "/api/index.php", "use": "vercel-php@0.3.6" },
        { "src": "/public/**", "use": "@vercel/static" }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.php?/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}